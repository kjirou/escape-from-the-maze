#!/usr/bin/env node

var minimist = require('minimist');

var commandOptions = minimist(process.argv.slice(2), {
  default: {
    development: false,
    help: false,
    ranking: false
  },
  alias: {
    development: ['d'],
    help: ['h'],
    ranking: ['r']
  }
});

if (commandOptions.development) {
  require('../env/development');
} else {
  require('../env/production');
}


var App = require('app');
var apis = require('lib/apis');
var libUtil = require('lib/util');


var commandOptions = minimist(process.argv.slice(2), {
  default: {
    help: false,
    ranking: false
  },
  alias: {
    help: ['h'],
    ranking: ['r']
  }
});

if (commandOptions.help) {
  console.log(libUtil.createHelpText());
  process.exit(0);
} else if (commandOptions.ranking) {
  apis.requestRanking(function(err, text) {
    if (err) {
      console.error(err);
      return process.exit(1);
    }
    console.log(text);
    process.exit(0);
  });
} else {
  var app = App.getInstance();
  app.start();
}
